<div class="jumbotron">
  <h1>Online Booking </h1>
  <p>...</p>
  <p><a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a></p>
</div>


<div class="row">
		<% @hotels.each_with_index do |hotel,i|%>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <%= image_tag "hotel#{i}.jpg"%>
      <div class="caption">
        <h3><%= hotel.name %></h3>
        <p><%= hotel.description %></p>
        <p>
        	<%= link_to "Book Now", hotel_path(hotel), :class => "btn btn-primary" %>
        	<%= link_to "View Details", hotel_path(hotel), :class => "btn btn-default" %>
        	</p>
      </div>
    </div>
  </div>
    <% end %>
</div>